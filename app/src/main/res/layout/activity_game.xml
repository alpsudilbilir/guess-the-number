<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/black"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/txtAttempts"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/circle"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="@string/attempts"
        android:textColor="#00BCD4"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtClue"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/circle"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="cluetext"
        android:textColor="#F10000"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/editTxtNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAttempts"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txtRemain"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/circle"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#E91E63"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/txtAttempts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@+id/txtAttempts"
        app:layout_constraintTop_toTopOf="@+id/txtAttempts"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTxtNum"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginBottom="348dp"
        android:background="@drawable/circle"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="Enter a number"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#673AB7"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGuess"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/circle"
        android:fontFamily="@font/aclonica"
        android:text="Guess"
        android:textAllCaps="false"
        android:textColor="#4CAF50"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtNum" />
</androidx.constraintlayout.widget.ConstraintLayout>